{
  "name": "@piou/screenshot",
  "version": "1.0.0",
  "description": "Take full-page screenshots of multiple URLs with TypeScript CLI",
  "main": "dist/index.js",
  "bin": {
    "screenshot": "bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "screenshot",
    "cli",
    "puppeteer",
    "typescript",
    "web",
    "capture"
  ],
  "author": "piouc",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "puppeteer": "^24.26.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3",
    "eslint": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2"
  }
}
